{% include 'include-collection-tabs' %}


{% schema %}
{
  "name": "Collection Tabs",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_tabs",
      "label": "Enable tabs",
      "default": false
    },
    {
      "type": "text",
      "id": "tab_title",
      "label": "Heading", 
      "default": "Featured product"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "Products per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Limit products",
      "min": 2,
      "max": 16,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "view_all",
      "label": "Show 'View all' link",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Featured collection"
        },
        {
          "type": "select",
          "id": "layout_type",
          "label": "Layout",
          "default": "grid",
          "options": [
            {
              "value": "slideshow",
              "label": "Slideshow"
            },
            {
              "value": "grid",
              "label": "Grid"
            }
          ]
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Tabs",
      "category": "Content",
    "blocks": [
       {
      "type": "tab"
       },
       {
      "type": "tab"
       },
       {
      "type": "tab"
       }
      ]
    }

  ]
}

{% endschema %}


